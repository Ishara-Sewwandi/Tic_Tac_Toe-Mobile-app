<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@drawable/img4"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:fontFamily="@font/abril_fatface"
        android:padding="8dp"
        android:text="@string/app_name"
        android:textColor="@color/Orange"
        android:textSize="30sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/play_offline_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="50dp"
        android:backgroundTint="@color/black"
        android:padding="10dp"
        android:text="Play offline"
        android:textSize="15sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:padding="5dp"
        android:text="Or"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/play_online_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="50dp"
        android:backgroundTint="@color/Orange"
        android:padding="10dp"
        android:text="Create Game online"
        android:textSize="15sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:padding="8dp"
        android:text="Or"
        android:textSize="20sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/game_id_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:hint="Enter game Id"
        android:inputType="number"
        android:padding="8dp"
        android:textSize="24sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/join_online_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="50dp"
        android:backgroundTint="@color/black"
        android:padding="8dp"
        android:text="Join Game online"
        android:textSize="15sp"
        android:textStyle="bold" />




</LinearLayout>